<script id='eventTile' type='text/x-handlebars-template'>
	<div class="eventTile" style='background: linear-gradient(to bottom, rgba(0, 0, 0, 0.75) 0%, rgba(0, 0, 0, 0) 25%, rgba(0, 0, 0, 0) 59%, rgba(0, 0, 0, 0.75) 100%), url([[ image ]]) no-repeat center center;background-size: cover;border-top: solid 11px [[ passionColor ]]'>
		<a href="/{{ config.site }}/{{ config.subfolder }}/whats-on/event?id=[[ identifier ]]">



			<div class="eventTile__content tile">
				<div class="eventTile__content__top">
					<span class="tile-date">[[ startDate ]] | [[ startTime ]]</span>
				<h3 class="tile-title">[[ title ]]</h3> 
				</div>
				
				<div class="eventTile__content__bottom">
					[[#each suitablesName ]]
					<span class="tile-suitable">[[ this ]]</span>
				[[/each ]]
				</div>
			
				
			</div>
		</a>
	</div>
</script>