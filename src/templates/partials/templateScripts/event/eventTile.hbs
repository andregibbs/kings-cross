<script id='eventTile' type='text/x-handlebars-template'>
	<div class="kxEventTile" style='background: linear-gradient(to bottom, rgba(0, 0, 0, 0.85) 0%, rgba(0, 0, 0, 0) 45%, rgba(0, 0, 0, 0) 59%, rgba(0, 0, 0, 0.75) 100%), url([[ image ]]) no-repeat center center;background-size: cover;border-top: solid 11px [[ passionColor ]]'>
		<a ga-ca="microsite" ga-ac="feature" ga-la="kings-cross:event-tile_[[ dash title ]]" data-omni-type="microsite" data-omni="uk:kings-cross:event-tile:[[ dash title ]]" href="/{{ config.site }}{{ config.subfolder }}/whats-on/event/?id=[[ identifier ]]">



			<div class="kxEventTile__content tile">
				<div class="kxEventTile__content__top">
					<span class="kxEventTile__tile-date">[[ startDate ]] | [[ startTime ]]</span>
				<h3 class="kxEventTile__tile-title">[[ title ]]</h3>
				</div>

				<div class="kxEventTile__content__bottom">
					[[#each suitablesName ]]
					<span class="kxEventTile__tile-suitable">[[ this ]]</span>
				[[/each ]]
				</div>


			</div>
		</a>
	</div>
</script>
