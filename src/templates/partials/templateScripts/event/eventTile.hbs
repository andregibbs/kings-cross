<script id='eventTile' type='text/x-handlebars-template'>
	<div class="eventTile">
		<a href="/{{ config.site }}/{{ config.subfolder }}/whats-on/event?i=[[ eventId ]]">
			<div class="eventTile__img img">
				<img src="[[ image ]]" alt="">
				<span>[[ startDate ]] / [[ startTime ]]</span>
			</div>

			<div class="eventTile__content tile">
				<span class="tile-title">[[ title ]]</span> <br><br>
				[[#each passion ]]
					<span class="tile-passions">[[ this ]]</span><br><br>
				[[/each ]]<br><br>
				[[#each suitables ]]
					<span class="tile-suitable">[[ this ]]</span><br><br>
				[[/each ]]<br><br>
				<span>book now</span><br><br>
			</div>
		</a>
	</div>
</script>
