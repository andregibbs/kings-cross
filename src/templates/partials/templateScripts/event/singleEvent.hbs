<script id='singleEvent' type='text/x-handlebars-template'>
	<div class="single-event" data-eventId='[[ eventId ]]' data-maxGroupSize='[[ groupSize ]]'  data-eventIdentifier='[[ identifier ]]'>


		<div class="event__img" style="background-image:url( [[image]] )">
			{{!-- <img src="[[ image ]]" alt=""> --}}
		</div>

		<section class="event__header section__inner">
			
			<div class="event__header__top">
				[[#unless externalbookinglink ]]
				<div class="event__header__top__left">
					<span class="event__header-date">
						[[ startDate ]] | [[ startTime ]]
					</span>
					<span class="action-capacity limited action">
						
						<span class="action-btn limited__availability">
						[[ limitedAvailability ]]
					</span>
					
					</span>
					

					
				</div>[[/unless]]
			
			

				{{!-- [[#if sponsor]]<span id="sponsor-mobile">Brought to you by [[ capitalize sponsor ]]</span>[[/if]] --}}
				[[#if externalbookinglink ]]
					{{!-- <a ga-ca="microsite" ga-ac="feature" ga-la="kings-cross:[[ dash title ]]_book-now" data-omni-type="microsite" data-omni="uk:kings-cross:event-page:[[ dash title ]]:book-now" href="[[externalbookinglink]]" class="link-book btn btn--primary" target="_blank">book now</a> --}}
				[[else]]
					[[#if reoccurring ]]
						<div class="event__header__buttons">
							<button ga-ca="microsite" ga-ac="feature" ga-la="kings-cross:[[ dash title ]]_book-tickets" data-omni-type="microsite" data-omni="uk:kings-cross:event-page:[[ dash title ]]:book-tickets" class="action-btn btn btn--primary">BOOK TICKETS</button><br>
