<script id='singleEvent' type='text/x-handlebars-template'>
	<div class="single-event" data-eventId='[[ eventId ]]' data-maxGroupSize='[[ groupSize ]]'  data-eventIdentifier='[[ identifier ]]'>

		<section class="event__header section__inner">
			<span class="event__header-date">[[ startDate ]] / [[ startTime ]]</span> <br><br>
			<span class="event__header-title">[[ title ]]</span>
		</section>

		<div class="event__img" style="background-image:url( [[image]] )">
			{{!-- <img src="[[ image ]]" alt=""> --}}
		</div>

		<div class="section event__content">
			<div class="section__inner">
				<section>
					<span class="tile-desc">[[ description ]]</span> <br><br>
					[[#if youtube ]]
						<iframe width="560" height="315" src="https://www.youtube.com/embed/[[ youtube ]]" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
					[[/if]]
				</section>
				<section>
					<div class="event__content-book action">
						<span class="action-date">[[ startDate ]] / [[ startTime ]]</span> <br><br>
						<span class="action-capacity">Max: [[ slotsAvailable ]]</span> <br><br>

						[[#if externalbookinglink ]]
							<a href="[[externalbookinglink]]" class="link-book btn btn--primary" target="_blank">book now</a><br><br>
						[[else]]
							<button class="action-btn btn btn--primary">book now</button><br><br>
						[[/if]]

						<span>*I am small print I can display crucial event information</span>
					</div>
					<div class="event__content-share share">
						<h2>Share this event</h2>



<ul>
	<li class="s-share-item s-ico-facebook">
		<a href="javascript:(function(){window.open('http://www.facebook.com/sharer.php?s=100&amp;u=https://samsung-kx.com/uk/kings-cross-sharer/?id=[[ identifier ]]')})();" class="s-share-link" title="Open in a New Window" data-omni="share:facebook">Facebook </a>
	</li>
	<li class="s-share-item s-ico-twitter">
		<a href="javascript:(function(){var displayText = encodeURIComponent('[[ title ]]'); window.open('https://twitter.com/intent/tweet?url=https://samsung-kx.com/uk/kings-cross-sharer/?id=[[ identifier ]]&amp;text='+displayText)})();" class="s-share-link" title="Open in a New Window" data-omni="share:tweeter">Tweet </a>
	</li>
	<li class="s-share-item s-ico-pinterest">
		<a href="javascript:(function(){window.open('http://www.pinterest.com/pin/create/button/?url=https://samsung-kx.com/uk/kings-cross-sharer/?id=[[ identifier ]]&amp;media=[[ image ]]&amp;description=[[ title ]]')})();" class="s-share-link" title="Open in a New Window" data-omni="share:pin it">Pin It </a>
	</li>
</ul>




					</div>

				</section>
			</div>
		</div>
	</div>
</script>
