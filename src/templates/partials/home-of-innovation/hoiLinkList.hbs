
<div class="hoiLinkList">
  {{#if this.title}}
    {{> home-of-innovation/hoiHeadline copy=this.title level='3'}}
  {{/if}}
  <div class="hoiList hoiList--grid-4">
    {{#each items }}
  		<a ga-ca="microsite" ga-ac="feature" ga-la="uk:kings-cross:{{@root.title}}:{{to_lower_case this.title }}"
					data-omni-type="microsite" data-omni="uk:kings-cross:{{@root.title}}:{{to_lower_case this.title }}" class="hoiList__Item"  href="{{{ this.url }}}">
  			<h6 class="hoiList__ItemTitle">{{ this.title }}</h6>
        <!-- <div class="hoiList__ItemImageWrap"> -->
        <div class="hoiList__ItemImageWrap"
          style="background-image:url('{{this.image}}')"
          role="img"
          aria-label="{{this.alt}}">
          <!-- <img class="hoiList__ItemImage" src="{{ this.image }}" alt="{{ this.alt }}"> -->
        </div>
  			<div>{{{ this.text }}}</div>
  		</a>
    {{/each}}

    {{#spacerElements items 4}}
      <div class="hoiList__Item  hoiList__Item--spacer"></div>
    {{/spacerElements}}
  </div>
</div>
