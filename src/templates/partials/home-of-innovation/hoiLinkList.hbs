
<div class="hoiLinkList">
  {{#if this.title}}
    <div class="hoiLinkList__Title">
      <h3>{{this.title}}</h3>
    </div>
  {{/if}}
  <div class="hoiList hoiList--grid-4">
    {{#each items }}
    	<div class="hoiList__Item">
    		<a data-omni-type="microsite" data-omni="{{ ../site }}:{{ ../subfolder }}:block:{{to_lower_case this.title }}" href="{{{ this.url }}}">
    			<h6 className="hoiList__ItemTitle">{{{ this.title }}}</h6>
    			<img src="{{ this.image }}" alt="{{ this.title }}">
    			<div>{{{ this.text }}}</div>
    		</a>
    	</div>
    {{/each}}
  </div>
</div>
