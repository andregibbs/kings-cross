{{!-- MAYBE BETTER TO HAVE SOME SORT OF RELATED TAGGING SYSTEM --}}
<div class="hoiContentRelated">
    <div class="hoiContentRelated__Title">
        {{ title }}
    </div>
    <div class="hoiContentRelated__Items">
        {{#each items }}
        <div class="hoiContentRelated__Item">
            {{ @index }} | {{ this.title }}
            <br/>
            {{!-- link added to item in gulpfile --}}
            <a href="{{ this.link }}">LINK TO {{ this.title }}</a>
        </div>
        {{/each}}
    </div>
</div>
<div>*** RELATED END ***</div>
