{{#if wrap}}
<div class="hoiMedia__Wrap">
{{/if}}

  {{#if (eq type 'audio')}}
  <audio
    controlsList="nofullscreen nodownload noremoteplayback"
  {{else}}
  <video
  {{/if}}
    {{!-- maintaining --video class names regardless of audio/video tag --}}
    class="hoiMedia hoiMedia--video hoiMedia--video{{class}}"
    {{#if (eq type 'audio')}}
      style="background-image: url('{{poster}}')"
    {{else}}
      poster="{{poster}}"
    {{/if}}
    src="{{content}}"
    {{#if title}}
      title="{{title}}"
    {{/if}}
    playsinline
    preload="metadata"
    {{#if loop}}
      loop
    {{/if}}
    {{#if autoplay}}
      autoplay muted
    {{/if}}
    {{#if_defined controls }}
      {{#if controls}}
        controls
      {{/if}}
    {{else}}
      controls
    {{/if_defined}}
  >
  {{#if (eq type 'audio')}}
    </audio>
  {{else}}
    </video>
  {{/if}}


  {{#if hide_state}}
  {{else}}
    {{> home-of-innovation/hoiMediaState }}
  {{/if}}

{{#if wrap}}
</div>
{{/if}}
