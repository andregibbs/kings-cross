{{#if wrap}}
<div class="hoiMedia__Wrap">
{{/if}}

  <video
    class="hoiMedia hoiMedia--video {{class}}"
    {{#if (eq type 'audio')}}
      style="background-image: url('{{poster}}')"
    {{/if}}
    src="{{content}}"
    poster="{{poster}}"
    {{#if title}}
      title="{{title}}"
    {{/if}}
    playsinline
    preload="metadata"
    {{#if loop}}
      loop
    {{/if}}
    {{#if autoplay}}
      autoplay muted
    {{/if}}
    {{#if_defined controls }}
      {{#if controls}}
        controls
      {{/if}}
    {{else}}
      controls
    {{/if_defined}}
  >
  </video>


  {{#if hide_state}}
  {{else}}
    {{> home-of-innovation/hoiMediaState }}
  {{/if}}

{{#if wrap}}
</div>
{{/if}}
