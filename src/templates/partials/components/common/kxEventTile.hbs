<div class="kxEventTile"
  style="
    background-image: url({{ imageURL }});
    background-size: cover;
    background-position: center;
    border-top: solid 11px
      {{#if properties}}
        {{#if properties.color}}
          {{properties.color}}
        {{/if}}
      {{else}}
        {{#if extra}}{{ extra.passionColor }}{{/if}}
      {{/if}}
  ">
	<a
    ga-ca="microsite"
    ga-ac="feature"
    ga-la="kings-cross:event-tile:{{ dash title }}"
    data-omni-type="microsite"
    data-omni="uk:kings-cross:event-tile:{{ dash title }}"
    href="/uk/explore/kings-cross/whats-on/event/?id={{ identifier }}">

		<div class="kxEventTile__content kxEventTile__tile">
			<div class="kxEventTile__content__top">
				<span class="kxEventTile__tile-date">{{ startDate }} | {{ startTime }}</span>
			<h3 class="kxEventTile__tile-title">{{ title }}</h3>
			</div>
			<div class="kxEventTile__content__bottom">
				{{#each suitablesName }}
				<span class="kxEventTile__tile-suitable">{{ this }}</span>
			{{/each }}
			</div>

		</div>
	</a>
</div>
