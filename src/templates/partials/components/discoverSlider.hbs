<section class="section slider" {{#ifCond id "top"}} id="topSlider" {{/ifCond}}>
    <div class="section__inner">
        {{#ifCond slider "sliderOne"}}
            <div class="slider-discover" id={{slider}}>
                {{#each config.discover.sliderOne }}
                    <div class="slider-discover__slide">
                        <img src="{{ @root.config.imgPath }}{{ this.image }}" class="discover__img" alt="{{ this.alt }}">
                        <p class="slider-discover__slide__description">{{ this.description }}</p>
                    </div>
                {{/each}}
            </div>
        {{else ifCond slider "sliderTwo"}}
            <div class="slider-discover" id={{slider}} >
                {{#each config.discover.sliderTwo }}
                    <div class="slider-discover__slide">
                        <img src="{{ @root.config.imgPath }}{{ this.image }}" class="discover__img" alt="{{ this.alt }}">
                    </div>
                {{/each}}
            </div>
        {{else ifCond slider "recentlySlider"}}
            <div class="slider-discover-recently" id={{slider}} >
                    {{#each config.discover.recentlySlider }}
                        <div class="slider-discover__slide">
                            <img src="{{ this.image }}" class="discover__img" alt="{{ this.alt }}">
                        </div>
                    {{/each}}
                </div>
        {{else ifCond slider "recentlySliderDescriptions"}}
            <div class="slider-discover-recently-descriptions" id={{slider}}>
                    {{#each config.discover.recentlySlider }}
                        <div class="slider-discover__slide">
                            {{{this.description}}}
                            {{{this.link}}}
                        </div>
                    {{/each}}
                </div>
        {{else ifCond slider "sliderNAS"}}
            <div class="slider-discover slider-NAS" id={{slider}} >
                {{#each config.discover.sliderNAS }}
                    <div class="slider-discover__slide">
                        <img src="{{ this.image }}" class="discover__img" >
                    </div>
                {{/each}}
            </div>
         {{else }}
            <div class="slider-discover-alt" id={{slider}} >
                <div class="slider-discover__slide">
                    <div class='videoContainer'>
                        <video class="video__main sliderVideo" preload="none" playsinline onclick="if(this.paused) { this.play() }else{this.pause()}" poster="https://images.samsung.com/is/image/samsung/p5/uk/explore/kings-cross/video_poster.jpg">
                            <source src="https://images.samsung.com/is/content/samsung/p5/uk/explore/kings-cross/discover/compressed-desktop.mp4" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    </div>
                </div>
                <div class="slider-discover__slide">
                    <div style="position: relative">
                        <img class="discover__main__img" src="//images.samsung.com/is/image/samsung/p5/uk/explore/kings-cross/discover/KX_Carousel_Samsung-KX50_1152x648.jpg"/>
                        <a target="_blank" class="button btn btn--primary slider-discover__cta" href="//images.samsung.com/is/content/samsung/p5/uk/explore/kings-cross/discover/SamsungKX50-The_Future_in_Focus_-_report.pdf">Learn More</a>
                    </div>
                </div>
            </div>
        {{/ifCond}}
    </div>
</section>