				{
					"type": "html-list",
					"items": [
						"Air pump",
						"Air stone",
						"Air pipe 1.5m",
						"20 Litre Bucket",
						"1 x 14cm Net Pot",
						"Plants (Herbs or Small Chilli Plant) ",
						"Small bag of clay pebbles",
						"Scissors*",
						"Craft Knife*",
						"Pen",
						"Compass* and Pencil",
						"4mm Correx Sheet - 100% recyclable (diameter of bucket +10cm)",
						"Plant Nutrients",
						"Water",
						"<a href=\"https://www.samsung.com/uk/smartthings/\">Samsung SmartThings</a> plug",
